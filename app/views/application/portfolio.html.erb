<main class='fdornas-main'>
  <div class='container'>
    <%= render 'layouts/navbar' %>

    <div class='row content'>
      <div class='col-12'>
        <%- @portfolio.portfolio_items.each do |item| %>
          <div class='portfolio-item row'>
            <div class='col-12 col-md-7'>
              <h4 class='portfolio-title'>
                <%= item.title.upcase %>
              </h4>
              <p class='portfolio-description'>
                <%= item.description.html_safe %>
              </p>
            </div>
            <div class='col-12 col-md-5'>
              <%- if item.image.attached? %>
                <%- if item.image.content_type.include?('image') %>
                  <%= image_tag item.image, class: 'portfolio-img' %>
                <%- else%>
                  <%= video_tag url_for(item.image), controls: true, class: 'portfolio-img' %>
                <%- end %>
              <%- end %>
            </div>
          </div>
        <%- end %>
      </div>
    </div>
  </div>

  <%= render 'layouts/footer' %>
</main>